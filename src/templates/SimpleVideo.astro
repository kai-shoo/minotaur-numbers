---
import { getRandomElement } from '../utils'

const BACKGROUND_VIDEOS = [
  '/videos/shni-shna-shnapi-rabbit.mp4',
  '/videos/shni-shna-shnapi-rabbit.mp4',
]

const backgroundVideo = getRandomElement(BACKGROUND_VIDEOS)
---

<style>
  @font-face {
    font-display: swap;
    font-family: 'Libre Caslon Text';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/libre-caslon-text-v5-latin-regular.woff2') format('woff2');
  }
  .numbers {
    font-family:
      'Roboto Black', sans-serif; /* Or your preferred bold, readable font */
    font-weight: 900;
    font-size: 20vw; /* Scalable, as requested - keep this */
    text-transform: uppercase;
    text-align: center;
    word-break: break-all;
    padding: 1vh 1vw;
    width: 100%;
    color: white; /* Strong, basic white */
    position: relative;
    z-index: 2;

    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent black - crucial */
    background-image: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(0, 0, 0, 0.08) 100%
    );
    background-size: 4px 4px; /* Adjust for noise grain size */
  }
  .background-video-container {
    width: 100%;
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .background-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
</style>

<div class="background-video-container">
  <video class="background-video" autoplay loop muted playsinline>
    <source src={backgroundVideo} type="video/mp4" />
  </video>
  <div class="numbers">
    <slot />
  </div>
</div>
