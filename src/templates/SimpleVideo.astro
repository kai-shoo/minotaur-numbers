---
import { getRandomElement } from '../utils'

const BACKGROUND_VIDEOS = ['/videos/shni-shna-shnapi-rabbit.mp4', '/videos/shni-shna-shnapi-rabbit.mp4']

const backgroundVideo = getRandomElement(BACKGROUND_VIDEOS)
---

<style>
  @font-face {
    font-display: swap;
    font-family: 'Libre Caslon Text';
    font-style: normal;
    font-weight: 400;
    src: url('/fonts/libre-caslon-text-v5-latin-regular.woff2') format('woff2');
  }
  .numbers {
    font-family: 'Libre Caslon Text', sans-serif;
    padding: 20px;
    position: relative;
    z-index: 2;
    background-color: #fff;
    mix-blend-mode: screen;
    font-weight: 800;
    font-size: 50vh;
    font-family: sans-serif;
    text-transform: uppercase;
    text-align: center;
    word-break: break-all;
    padding: 1vh 1vw;
  }
  .background-video-container {
    width: 100%;
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .background-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
</style>

<div class="background-video-container">
  <video 
    class="background-video" 
    autoplay 
    loop 
    muted 
    playsinline
  >
    <source src={backgroundVideo} type="video/mp4">
  </video>
  <div class="numbers">
    <slot />
  </div>
</div>
